<div class="layout-pages">
<h1>User Account</h1>
<table>
    <thead>
        <tr>
            <th class="layout-table-head"><p>Date Created</p></th>
            <th class="layout-table-head"><p>Email Address</p></th>            
            <th class="layout-table-head"><p>Verified</p></th>
            <th class="layout-table-head"><p>Admin</p></th>            
            <th class="layout-table-head"><p>Last Updated</p></th>
        </tr>
    </thead>
    <tbody>        
        <tr>
            <td><%= @user.created_at.strftime('%m-%d-%Y') %></td>
            <td><%= @user.email %></td>            
            <td><%= @user.is_verified %></td>
            <td><%= @user.is_admin %></td>            
            <td><%= @user.updated_at.in_time_zone('Asia/Manila').strftime('%m-%d-%Y %I:%M %p %Z') %></td>               
        </tr>        
    </tbody>    
</table>

<div class="layout-content-button">
<p><%= link_to "Edit", admins_user_edit_path, {class:"layout-button-edit"} %></p>

<% if @user.is_verified %>
<p><%= button_to "Un-verify", admins_user_verify_path, {class:"layout-button-verify-false"} %></p>
<% else %>
<p><%= button_to "Verify", admins_user_verify_path, {class:"layout-button-verify-true"} %></p>
<% end %>
</div>

<%= link_to "back", admins_admin_path %>
</div>