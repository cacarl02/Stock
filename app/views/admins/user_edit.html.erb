<div class="layout-pages">
<h1>Edit Account Details</h1>

<%= form_with(scope: @user, url: admins_user_update_path, method: :patch) do |form| %>

    <div style="font-size: 1.2em;">
        <span style="color:red;">Warning:</span> will replace your old email address! <br>
        <%= "#{@user.email}" %>
    </div>
    <br>
    <div>
        <%= form.label "New email", class:"form-label" %>
        <%= form.text_field :email, class:"form-control" %>
    </div>     

    <div class="layout-content-button" style="justify-content:center; width:100%;">
        <p><%= button_to "Save", admins_user_update_path, {class:"layout-button-save"} %></p>
    </div>

<% end %>

    


<%= link_to "back", admins_user_view_path %>
</div>