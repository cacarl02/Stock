

<% if @transaction_type === 'withdraw' %>

    <h1><%= @transaction_type %></h1>
    Balance <%= @wallet %>  

    <%= form_with scope: :wallet, url: subtract_balance_path do |f| %>
        <%= f.label :amount %>
        <%= f.text_field :amount %>
        <%= f.submit 'Withdraw' %>
    <% end %>
    <%= link_to 'Home', users_home_path %>
<% end %>





<% if @transaction_type === 'deposit' %>
    <h1><%= @transaction_type %></h1>
    Balance <%= @wallet %>

    <%= form_with scope: :wallet, url: add_balance_path do |f| %>
        <%= f.label :amount %>
        <%= f.text_field :amount %>
        <%= f.submit 'Deposit' %>
    <% end %>
    <%= link_to 'Home', users_home_path %>
<% end %>