<table>
    <span>Data provided by <a href="https://www.coingecko.com/">CoinGecko</a></span>
    <thead>
        <tr>
            <th>Rank</th>
            <th>Coin</th>
            <th>Price</th>
            <th>24h</th>
            <th>24h Volume</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @api.each do |coin| %>
            <tr>
                <td><%= coin["market_cap_rank"] %></td>
                <td>
                <%= coin["name"] %>
                <%= coin["symbol"].upcase %></td>
                <td><%= coin['current_price'] %></td>
                <td><%= coin['price_change_percentage_24h'] %><span>%</span></td>
                <td><%= number_to_human(coin['total_volume']) %></td>
                <td><%= link_to 'Trade', trade_path(coin_price: coin['current_price'], coin_name: coin['name']) %></td>
            </tr>
        <% end %>
    </tbody>
</table>