<table>
    <thead>
        <tr>
            <td>Coin</td>
            <td>Size</td>
            <td>Entry Price</td>
            <td>Exit Price</td>
            <td>Profit/Loss</td>
            <td>Transaction Date</td>
        </tr>
    </thead>
    <tbody>
        <% @trade.each do |t| %>
            <tr>
                <td><%= t.coin_id.capitalize %></td>
                <td><%= t.size %></td>
                <% if t.entry_price %>
                    <td><%= t.entry_price%></td>
                    <td></td>
                <% elsif t.exit_price %>
                    <td></td>
                    <td><%= t.exit_price %></td>
                <% end %>
                <td>La pa</td>
                <td><%= t.created_at.in_time_zone('Asia/Manila').strftime('%m-%d-%Y %I:%M %p')%></td>
            </tr>
        <% end %>
    </tbody>
</table>